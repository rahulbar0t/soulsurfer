# Google AI Studio (Gemini)
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Video processing
FRAME_EXTRACTION_FPS=5.0
MAX_VIDEO_SIZE_MB=100

# MediaPipe Pose
POSE_MODEL_COMPLEXITY=2
MIN_DETECTION_CONFIDENCE=0.5
MIN_TRACKING_CONFIDENCE=0.5
MIN_LANDMARK_VISIBILITY=0.6

# Frame Enhancement
ENABLE_FRAME_ENHANCEMENT=true
ENHANCEMENT_ZOOM_ENABLED=true
ENHANCEMENT_ZOOM_CROP_RATIO=0.6
ENHANCEMENT_SHARPEN_ENABLED=true
ENHANCEMENT_SHARPEN_KERNEL_SIZE=5
ENHANCEMENT_SHARPEN_SIGMA=1.0
ENHANCEMENT_SHARPEN_STRENGTH=1.5
ENHANCEMENT_CONTRAST_ENABLED=false
ENHANCEMENT_CLAHE_CLIP_LIMIT=2.0
ENHANCEMENT_CLAHE_TILE_GRID_SIZE=8

# Storage
UPLOAD_DIR=./uploads
